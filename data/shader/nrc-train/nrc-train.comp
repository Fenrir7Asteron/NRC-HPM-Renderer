void EncodeRay(vec3 pos, const vec3 dir)
{
	//debugPrintfEXT("%f, %f, %f\n", pos.x, pos.y, pos.z);

	pos /= skySize.y;
	const float theta = atan(dir.y, dir.x);
	const float phi = atan(length(dir.xy), dir.z);
	
	//debugPrintfEXT("%f, %f, %f, %f, %f\n", pos.x, pos.y, pos.z, theta, phi);

	nr0[0] = pos.x;
	nr0[1] = pos.y;
	nr0[2] = pos.z;
	nr0[3] = theta;
	nr0[4] = phi;
}

