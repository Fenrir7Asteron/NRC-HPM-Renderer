		nr6[i] *= ReluDeriv(nr5[i]);
	}

	// Calc delta Weights5
	for (uint row = 0; row < 3; row++)
	{
		for (uint col = 0; col < 64; col++)
		{
			uint linearIndex = (row * 64) + col;
			float deltaWeight = -nr5[col] * nr6[row];
			atomicAdd(matDeltaWeights5[linearIndex], deltaWeight * WIDTH_FACTOR);
